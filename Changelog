CREATE TABLE `countries` (
  `id` int NOT NULL AUTO_INCREMENT,
  `country_code` varchar(255) NOT NULL,
  `country_name` varchar(255) NOT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `country_code` (`country_code`)
);


ALTER TABLE `customers` 
ADD COLUMN `country` INT NULL,
ADD COLUMN `cnt_code` VARCHAR(2) NULL,
ADD COLUMN `for_cur` VARCHAR(3) NULL;


ALTER TABLE `invoices` 
ADD COLUMN `exchange_rate` DECIMAL(10,2) NULL,
ADD COLUMN `for_cur` VARCHAR(3) NULL,
ADD COLUMN `cntcode` VARCHAR(2) NULL;

ALTER TABLE `proforma_invoices` 
ADD COLUMN `exchange_rate` DECIMAL(10,2) NULL,
ADD COLUMN `for_cur` VARCHAR(3) NULL,
ADD COLUMN `cntcode` VARCHAR(2) NULL;

ALTER TABLE `invoice_items` CHANGE COLUMN `description` `description` TEXT NOT NULL ;

ALTER TABLE `proforma_invoice_items` CHANGE COLUMN `description` `description` TEXT NOT NULL ;


